<UserControl x:Class="Library.BoockInfo"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Library"
			 mc:Ignorable="d" 
			 d:DesignHeight="118.75" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition MinHeight="80"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="TextBlock_NameOfBoock" Text="Title" Grid.Row="0" Margin="0,-5, 10, 0"/>
            <TextBlock x:Name="TextBlock_AuthorOfBoock" Text="Author" Grid.Row="0" Margin="0, -4, 0, 0"/>
        </StackPanel>
        <TextBlock x:Name="TextBlock_PublishDate" Text="Publish Date" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5, 10, 0"/>
        <TextBlock x:Name="TextBlock_NumberOfBooock" Text="NumberOfBoock" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 10, 0"/>

        <Border Grid.Row="0" Height="1" Width="525" Background="Black" VerticalAlignment="Bottom"/>
        <Border Grid.Row="1" Height="1" Width="525" Background="Black" VerticalAlignment="Bottom"/>

        <TextBlock x:Name="TextBlock_Description" Text="Description" Grid.Row="1"/>
    </Grid>
</UserControl>
